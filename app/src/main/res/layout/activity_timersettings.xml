<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerSettingsActivityMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="7"
    tools:context=".TimerSettingsActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/timerSettingsActivityToolbar" />

    <include
        layout="@layout/settings_constraintlayout"
        android:id="@+id/settingsSetNumberConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp" />

    <include
        layout="@layout/settings_constraintlayout"
        android:id="@+id/settingsCycleNumberPerSetConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp" />

    <include
        layout="@layout/settings_constraintlayout"
        android:id="@+id/settingsWorkOrStudyDurationConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp" />

    <include
        layout="@layout/settings_constraintlayout"
        android:id="@+id/settingsShortBreakDurationConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp" />

    <include
        layout="@layout/settings_constraintlayout"
        android:id="@+id/settingsShortBreakDurationIncreaseConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp" />

    <include
        layout="@layout/settings_constraintlayout"
        android:id="@+id/settingsLongBreakDurationConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.125" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:text="@string/startButtonText"
        android:textSize="20sp"
        android:textAllCaps="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.125" />

</LinearLayout>